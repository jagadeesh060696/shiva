pipeline {
    agent any

    environment {
        REPO_NAME = "my-repo"
        BRANCH = "${env.BRANCH_NAME}"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Checking out branch: ${env.BRANCH_NAME}"
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "Building branch: ${BRANCH}"
                sh 'echo "Build process running..."'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests for ${BRANCH}"
                sh 'echo "Test phase complete"'
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo "Deploying ${BRANCH} branch"
                sh 'echo "Deployment successful"'
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline completed successfully for branch ${BRANCH}"
        }
        failure {
            echo "❌ Pipeline failed for branch ${BRANCH}"
        }
    }
}
